<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorAccent" android:id="@+id/C1">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/open1"
            android:layout_alignParentTop="true"
            android:id="@+id/IB1"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:layout_constraintBaseline_toBaselineOf="@id/C1"
            app:layout_constraintTop_toTopOf="@id/C1"
            app:layout_constraintRight_toRightOf="@id/C1"
            android:onClick="onClick1"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/open2"
            android:id="@+id/IB2"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:layout_constraintTop_toBottomOf="@id/IB1"
            app:layout_constraintRight_toRightOf="@id/C1"
            android:onClick="onClick2" />
</android.support.constraint.ConstraintLayout>